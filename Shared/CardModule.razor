@* Componente reusable para las tarjetas del dashboard *@

<div class="col-12 col-sm-6 col-md-4 col-lg-3">
    <div class="card module-card text-center h-100 d-flex flex-column">
        <div class="card-body d-flex flex-column">
            <div class="icon-circle @("bg-" + IconColor) mx-auto">
                <img src="@IconSrc" alt="@Title" class="icon-img" />
            </div>
            <h5 class="card-title mt-3 fw-semibold">@Title</h5>
            <p class="card-text flex-grow-1">@Description</p>
            <a href="@LinkUrl" class="btn @("btn-" + IconColor) mt-auto">Acceder</a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public string IconSrc { get; set; }

    [Parameter]
    public string LinkUrl { get; set; }

    [Parameter]
    public string IconColor { get; set; }
}